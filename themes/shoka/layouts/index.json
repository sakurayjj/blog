{{- $pages := where .Site.RegularPages "Section" "posts" -}}
{{- $list := slice -}}
{{- range $pages -}}
  {{- $list = $list | append (dict
    "title" .Title
    "permalink" .Permalink
    "path" .RelPermalink
    "summary" (.Summary | plainify)
    "content" .Plain
    "categories" (.Params.categories | default (slice))
  ) -}}
{{- end -}}
{{- $list | jsonify -}}
